{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "build",
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "test/**/*.ts",
    "src/**/*.spec.ts"
  ]
}