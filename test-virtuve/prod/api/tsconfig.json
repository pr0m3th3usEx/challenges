{
  "compilerOptions": {
    "target": "ES2016",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    // "composite": true,
    // "declaration": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./build",
    "paths": {
      "src/*": ["./src/*"],
    },
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}