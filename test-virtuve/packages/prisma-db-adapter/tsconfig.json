{
    "compilerOptions": {
      "target": "ES2016",
      "module": "Preserve",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "composite": true,
      "declaration": true,
      "baseUrl": ".",
      "outDir": "./build",
      "types": [
        "node",
        "vitest/globals"
      ],
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": [
        "src",
    ],
    "exclude": ["node_modules"]
  }